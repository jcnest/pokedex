{
    "moduleFileExtensions": [
        "js",
        "json",
        "ts"
    ],
    "rootDir": ".",
    "testEnvironment": "node",
    "testRegex": ".e2e-spec.ts$",
    "transform": {
        "^.+\\.(t|j)s$": "ts-jest"
    },
    "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/../src/$",
        "^@pokemon/(.*)$": "<rootDir>/../src/pokemon/$",
        "^@common/(.*)$": "<rootDir>/../src/common/$",
        "^@pipes/(.*)$": "<rootDir>/../src/common/pipes/$"
    }
}